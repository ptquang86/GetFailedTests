{
    "description": "Get Failed Graphene/Test-cafe Tests",
    "manifest_version": 2,
    "name": "Get Failed Tests",
    "version": "1.0",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Get Failed Tests: Click on the result table to get the failed Graphene/Test-cafe tests"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/gooddata/*/pull/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}
